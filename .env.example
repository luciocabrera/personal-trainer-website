# Environment Variables for Email Configuration
# Copy this file to .env and fill in your values

# Email Provider Configuration
EMAIL_PROVIDER=gmail
# Options: gmail, smtp, outlook

# Gmail Configuration (if using Gmail)
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# SMTP Configuration (if using custom SMTP)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@domain.com
# SMTP_PASSWORD=your-password

# Outlook Configuration (if using Outlook)
# OUTLOOK_USER=your-email@outlook.com
# OUTLOOK_PASSWORD=your-password

# Email Recipients and Sender
EMAIL_TO=desi4fit@gmail.com
EMAIL_FROM=your-email@domain.com

# Features
SEND_AUTO_REPLY=true

# Resend API (for production email when SMTP is blocked)
RESEND_API_KEY=your-resend-api-key-here

# Database Configuration
POSTGRES_DB=personal_trainer
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://username:password@host:port/database

# pgAdmin Configuration
PGLADMIN_EMAIL=admin@personal-trainer.com
PGLADMIN_PASSWORD=your-pgadmin-password

# Node Environment
NODE_ENV=development