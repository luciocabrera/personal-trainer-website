# Production Environment Variables for DigitalOcean
# Copy this file to .env and fill in your production values

# Email Provider Configuration
EMAIL_PROVIDER=gmail

# Gmail Configuration
GMAIL_USER=desi4fitapp@gmail.com
GMAIL_APP_PASSWORD="your-16-character-app-password"

# Email Recipients and Sender
EMAIL_TO=luciocabrera1978@gmail.com
EMAIL_FROM=desi4fit@gmail.com

# Features
SEND_AUTO_REPLY=true

# Resend API (for production email when SMTP is blocked)
RESEND_API_KEY=your-resend-api-key-here

# Database Configuration (PRODUCTION - Use strong passwords!)
POSTGRES_DB=personal_trainer
POSTGRES_USER=admin
POSTGRES_PASSWORD=your-very-secure-production-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://admin:your-very-secure-production-password-here@postgres:5432/personal_trainer

# pgAdmin Configuration (Optional for production)
PGADMIN_EMAIL=admin@personal-trainer.com
PGADMIN_PASSWORD=your-secure-pgadmin-password

# Node Environment
NODE_ENV=production

# Security Note: Use strong, unique passwords in production!
