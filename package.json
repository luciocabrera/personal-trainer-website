{
  "name": "personal-trainer",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer build/client",
    "build:production": "NODE_ENV=production npm run build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "start:express": "node server-express.js",
    "start:rr": "react-router-serve ./build/server/index.js",
    "lint": "eslint .",
    "preview": "npm run build && npm run start",
    "knip": "knip",
    "typecheck": "react-router typegen && tsc",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix",
    "check:unused": "knip --max-issues 1",
    "check:unused:fix": "knip --fix",
    "typegen": "react-router typegen",
    "clean": "rm -rf build node_modules/.vite",
    "build:clean": "npm run clean && npm run build",
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "db:logs": "docker compose -f docker-compose.dev.yml logs -f postgres",
    "db:restart": "docker compose -f docker-compose.dev.yml restart postgres",
    "db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d"
  },
  "dependencies": {
    "@react-router/node": "^7.12.0",
    "@react-router/serve": "^7.12.0",
    "@stylexjs/stylex": "^0.17.5",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "i18next": "^25.7.4",
    "nodemailer": "^7.0.12",
    "pg": "^8.17.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.3",
    "react-router": "^7.12.0",
    "resend": "^6.7.0",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@react-router/dev": "^7.12.0",
    "@stylexjs/eslint-plugin": "^0.17.5",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "globals": "^17.0.0",
    "knip": "^5.81.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vite-plugin-babel": "^1.4.1",
    "vite-plugin-stylex": "^0.13.0",
    "vite-tsconfig-paths": "^6.0.4"
  }
}
